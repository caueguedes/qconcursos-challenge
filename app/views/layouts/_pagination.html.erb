<nav aria-label="Page navigation">
  <ul class="pagination justify-content-end">

    <% if @page.to_i == 1 %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
      </li>
    <% else %>
      <li class="page-item">
        <%= link_to 'Previous', set_to_current_params(page: @page.to_i - 1 ), class: "page-link" %>
      </li>
      <li class="page-item">
        <%= link_to @page.to_i - 1 , set_to_current_params(page: @page.to_i - 1 ), class: "page-link" %>
      </li>
    <% end %>

    <li class="page-item disabled"><a class="page-link" href="#"><%= @page %></a></li>

    <li class="page-item">
      <%= link_to @page.to_i + 1 , set_to_current_params(page: @page.to_i + 1 ), class: "page-link" %>
    </li>
    <li class="page-item">
      <%= link_to 'Next', set_to_current_params(page: @page.to_i + 1 ), class: "page-link" %>
    </li>
  </ul>
</nav>