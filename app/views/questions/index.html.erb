<p id="notice"><%= notice %></p>

<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href="#">
    <h2>QConcursos</h2>
  </a>
</nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      <ul class="list-group">
        <%= render partial: 'questions/hot_topics', collection: @hot_topics %>
      </ul>
    </div>
    <div class="col">
      <div class="container">
        <ul class="nav justify-content-end">
          <li class="nav-item">
            <%= link_to "week", set_current_params(period: 'week'),  class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "month", set_current_params(period: 'month'), class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "year", set_current_params(period: 'year'),  class: 'nav-link' %>
          </li>
        </ul>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Statement</th>
              <th>Text</th>
              <th>Discipline</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @questions.each do |question| %>
              <tr>
                <td><%= question.statement %></td>
                <td><%= question.text %></td>
                <td><%= question.discipline %></td>
                <td><%= link_to 'Show', id: question.id %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= pagination %>

